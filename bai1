#include <stdio.h>
#include <conio.h>
main(){
    int a[12], kq=0, n,x;
    do{
        printf("Nhap so n");scanf("%d",&n);
    } while(n<=0||n>=10);
    for (int i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
    for (int i=0; i<n; i++)
    {
        printf("%d ",a[i]);
    }
    printf("\n");
    printf("Nhap so x"); scanf("%d", &x);
    if (x>n){
        for (int i=0; i<n; i++) kq+=a[i];
    } 
    else{
            for (int i=0; i<x; i++) kq+=a[i];
    kq/=x;}
    printf("%d",kq);
    getch();
    
}
